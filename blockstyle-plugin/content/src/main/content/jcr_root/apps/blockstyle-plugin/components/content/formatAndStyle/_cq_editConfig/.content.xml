<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:dialogMode="floating"
    cq:layout="editbar"
    jcr:primaryType="cq:EditConfig">
    <cq:inplaceEditing
        jcr:primaryType="cq:InplaceEditingConfig"
        active="{Boolean}true"
        editorType="text">
        <config jcr:primaryType="nt:unstructured">
            <rtePlugins jcr:primaryType="nt:unstructured">
                <lists
                    jcr:primaryType="nt:unstructured"
                    features="[none]"/>
                <justify
                    jcr:primaryType="nt:unstructured"
                    features="[none]"/>
                <format
                    jcr:primaryType="nt:unstructured"
                    features="[none]"/>
                <paraformat
                    jcr:primaryType="nt:unstructured"
                    features="*"
                    >
                    <formats
                        jcr:primaryType="cq:WidgetCollection">
                        <p jcr:primaryType="nt:unstructured" tag="p" description="Paragraph" />
                        <h1 jcr:primaryType="nt:unstructured" tag="h1" description="Heading 1" />
                        <h2 jcr:primaryType="nt:unstructured" tag="h2" description="Heading 2" />
                        <h3 jcr:primaryType="nt:unstructured" tag="h3" description="Heading 3" />
                        <span jcr:primaryType="nt:unstructured" tag="span" description="Span" />
                        <div jcr:primaryType="nt:unstructured" tag="div" description="Div" />
                    </formats>
                </paraformat>
                <styles
                    jcr:primaryType="nt:unstructured"
                    features="*"
                    externalStyleSheets="[/apps/rich-text/components/content/formatAndStyle/test.css]"
                    >
                	<styles
                        jcr:primaryType="cq:WidgetCollection">
                	    <test1 jcr:primaryType="nt:unstructured" cssName="test1" text="Test 1" />
                	    <test2 jcr:primaryType="nt:unstructured" cssName="test2" text="Test 2" />
                	    <test3 jcr:primaryType="nt:unstructured" cssName="test3" text="Test 3" />
                	</styles>
                </styles>
            </rtePlugins>
         </config>
    </cq:inplaceEditing>
</jcr:root>